<section id="edit" class="wrapper style1">
  <div class="container">
    <h1>Editing article</h1>

    <%= form_for :post, url: post_path(@post), method: :patch do |f| %>
    <div class="row uniform 75%">
      <% if @post.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@post.errors.count, "error") %> prohibited
          this article from being saved:
        </h2>
        <ul>
          <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
      <hr>
         <% end %>
      <div class="12u$">
        <%= f.file_field  :avatar, as: :file %>
      </div>
      <div class="6u 12u$(xsmall)">
        <%= f.label :title %>
        <%= f.text_field :title, placeholder: "Modify title here" %>
      </div>
      <div class="6u$ 12u$(xsmall)">
         <%= f.label :category_id %>
         <%= f.select :category_id, options_from_collection_for_select(Category.all, "id", "title", @post.category_id), placeholder:"Category" %>
      </div>
      <div class="12u$">
        <%= f.label :text %>
        <%= f.text_area :text, placeholder: "Modify text here", rows: 10%>
      </div>
      <div class="6u">
         <%= f.check_box :published %>
         <%= f.label :published, "Publish" %>
      </div>
    </div>
    <ul class="actions">
      <li>
        <%= f.submit "Submit", class: "button special" %>
      </li>
      <li>
        <%= link_to 'Destroy', @post,  method: :delete, data: { confirm: 'Are you sure?' }, class: "button default" %>
      </li>
    </ul>
    <% end %>

    <%= render "back" %>
  </div>
</section>
