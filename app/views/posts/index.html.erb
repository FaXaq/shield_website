<section id="one" class="wrapper style1">
   <% if @posts.any? %>
   <% @posts.each_with_index do |post, index| %>
   <div class="inner">
      <%= render "preview_post", post: post, index: index %>
   </div>
  <% end %>
  <% if logged_in? %>
  <div class="inner" style="text-align:center;">
     <%= link_to 'New', new_post_path, class: "button big special" %>
  </div>
  <% end %>
  <% else %>
  <div class="inner center">
     <p>Nous n'avons rien trouv√© :(</p>
  </div>
  <% end %>
</section>
