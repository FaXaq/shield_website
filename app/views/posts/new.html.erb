<section id="new" class="wrapper style1">
  <div class="inner">
    <h2>New Post</h2>
    <%= form_for :post, url: posts_path do |f| %>
    <div class="row uniform 75%">
      <div class="12u$">
        <%= f.text_field :title, placeholder: "Enter the title" %>
      </div>
      <div class="12u$">
        <%= f.text_area :text, placeholder: "Enter the article", rows: 5 %>
      </div>
    </div>
    <ul class="actions" style="text-align:center;">
      <li>
        <input id="newpostpart" type="button" value="Add post part" class="button special" onclick="toto()"/>
      </li>
    </ul>
    <ul class="actions">
      <li>
        <%= f.submit "Submit",  class: "button special" %>
      </li>
    </ul>
    <% end %>

    <%= render "back" %>
</section>
