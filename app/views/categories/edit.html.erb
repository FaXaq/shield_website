<section id="edit" class="wrapper style1">
  <div class="container">
    <h1>Editing category</h1>

    <%= form_for :category, url: category_path(@category), method: :patch do |f| %>
    <div class="row uniform 75%">
      <% if @category.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@category.errors.count, "error") %> prohibited
          this article from being saved:
        </h2>
        <ul>
          <% @category.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
      <hr>
      <% end %>
      <div class="12u$">
        <%= f.label :title %>
        <%= f.text_field :title, placeholder: "Modify title here" %>
      </div>

      <div class="12u$">
        <%= f.label :description %>
        <%= f.text_area :description, placeholder: "Modify description here", rows: 5 %>
      </div>
    </div>
    <ul class="actions">
      <li>
        <%= f.submit "Submit", class: "button special" %>
      </li>
      <li>
        <%= link_to 'Destroy', @category,  method: :delete, data: { confirm: 'Are you sure?' }, class: "button default" %>
      </li>
    </ul>
    <% end %>

    <%= render "back" %>
  </div>
</section>
